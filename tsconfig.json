{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@providers/*": ["providers/*"],
      "@services/*": ["services/*"],
      "@components/*": ["components/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "preserve"
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "build", "dist"]
}
